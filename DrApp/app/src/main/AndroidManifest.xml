<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufc.dspm.abilio.drapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrApp"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".PatientMain"
            android:label="@string/title_activity_patient_main"
            android:theme="@style/Theme.DrApp.NoActionBar" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_doctor_main"
            android:theme="@style/Theme.DrApp.NoActionBar" />
        <activity android:name=".DoctorSignup" />
        <activity android:name=".PatientSignup" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>